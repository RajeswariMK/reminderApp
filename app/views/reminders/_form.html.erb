<%= form_with(model: reminder, local: true) do |form| %>
  <% if reminder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reminder.errors.count, "error") %> prohibited this reminder from being saved:</h2>

      <ul>
      <% reminder.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

   <div class="form-group">
    <%= form.label :date, "Date", :class => 'control-label col-lg-2' %>
    <!-- Rails expects time_select when dealing with ActiveRecord forms -->

    <div class="col-lg-4">
      <%= date_select :reminder, :date, {:class => "form-control", :start_year => Date.current.year, :end_year => 1920 } %>
    </div>
    
    <%#=form.error_span(:date) %>
  </div>


  <div class="field">
    <%= form.label :reminder_type %>
    <%= form.select :reminder_type, Reminder.reminder_types.keys %>
    <%#= form.text_field :reminder_type %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
